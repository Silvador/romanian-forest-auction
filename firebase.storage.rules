rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Owners can manage their pending uploads prior to attaching to an auction
    match /owners/{ownerId}/pending/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == ownerId;
    }

    // Auction-scoped documents can only be managed by the forest owner
    match /auctions/{auctionId}/{allPaths=**} {
      function auction() {
        return get(/databases/(default)/documents/auctions/$(auctionId));
      }

      allow read: if request.auth != null && (
        auction().data.ownerId == request.auth.uid ||
        auction().data.status in ['upcoming', 'active', 'ended', 'sold']
      );

      allow write, delete: if request.auth != null && auction().data.ownerId == request.auth.uid;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
