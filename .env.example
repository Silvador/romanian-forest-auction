# Firebase Configuration (Client-side - VITE_ prefix makes them public)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin (Server-side - Keep these SECRET!)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# OpenAI API (for OCR features - Keep this SECRET!)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Resend Email Service (for email notifications - Keep this SECRET!)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=notificari@roforest.ro
RESEND_FROM_NAME=RoForest - Licitatii Forestiere

# Database (Optional - PostgreSQL for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=https://roforest.ro

